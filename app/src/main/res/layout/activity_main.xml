<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Please Enter the Name of the KÄ°ckboxer "/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPunchSpeed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Please Enter the Punch Speed"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPunchPower" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPunchSpeed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter Punch Power"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtKickSpeed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPunchPower" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter Kikc Speed"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtKickPower" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtKickSpeed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter Kick Power"/>
    <Button
            android:text="Save Kickboxer Server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edtKickPower" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Get Data From Server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtGetData" android:textColor="@color/colorAccent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnSave"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="30sp"/>
    <Button
            android:text="GET ALL KICKBOXER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetAll" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGetData" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/colorAccent"/>
    <Button
            android:text="Switch to another activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextActivity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/btnGetAll"/>
</android.support.constraint.ConstraintLayout>